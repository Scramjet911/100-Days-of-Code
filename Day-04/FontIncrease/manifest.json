{
    "manifest_version" : 2,
    "name" : "Font Increase",
    "version" : "1.0",
    
    "description" : "An extension that can increase the Font Size of the website without zooming in",
    
    "background" : {
        "scripts" : ["background.js"]
    },

    "browser_action" : {
        "default_title" : "Text Size",
        "default_icon" : {
            "48" : "icons/esc_48.jpg",
            "96" : "icons/esc_96.jpg"
        },
        "default_popup" : "popup/sizeinc.js"
    },

    "permissions" : [
        "storage"
    ],

    "browser_specific_settings" : {
        "gecko" : "fontincrease@scramjet911"
    }
}